/*! 
* typography 
*/
html, body
    font-weight: 300
    font-size: 16px

a:link, a:visited
    text-decoration: underline
    font-weight: 500
a:link
    color: brand3
a:visited
    color: brand1
a:hover, a:active
    text-decoration: none

p, li, a, td
    color: brand1
    line-height: 140%
    letter-spacing: -0.03rem

h1, h2, h3, h4, h5, h6,
.h1, .h2, .h3, .h4, .h5, .h6
    color: brand1
    margin:0
    margin-bottom: 0.1rem
h1, .h1,
h2, .h2
    letter-spacing: -0.1rem
    line-height: 110%
h3, .h3,
h4, .h4
    letter-spacing: -0.06rem
    line-height: 130%
h5, .h5,
h6, .h6
    letter-spacing: -0.04rem
    line-height: 130%
h1, .h1,
h2, .h2,
h3, .h3,
h5, .h5
    font-weight: 900
h4, .h4,
h6, .h6
    font-weight: 600

main#holding h1 
    font-size: 1.5em
main#holding h2 
    font-size: 1.1em
    font-weight: 400
    text-transform: uppercase
    color: whiteAlp75
    letter-spacing: 0
main#holding h3 
    font-size: 0.8em
    font-weight: 200
    text-transform: uppercase
    color: whiteAlp75
    letter-spacing: 0
span.timeel
    color: rgba(255,255,255,0.2)
    font-weight: 900
    font-size: 7em
    line-height: 100%

